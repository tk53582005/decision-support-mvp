datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum DecisionResult {
  EXIT
  HOLD
  PROCEEDABLE
}

model DecisionLog {
  id           String         @id @default(cuid())
  createdAt    DateTime       @default(now())
  answersJson  Json
  result       DecisionResult
  holdUntil    DateTime?
  logicVersion String         @default("v1")
}